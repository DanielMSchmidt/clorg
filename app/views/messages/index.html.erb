<h1>Latest Messages</h1>
<h3>Write a Message </h3>
<%= render 'form' %>
<% @messages.each do |message| %>
  <div id="<%= message.id %>">
    <div id="message">
      <%= render 'message', message: message %>
    </div>
    <div class="comments">
      <% comments_for(message).each do |comment| %>
        <%= render 'comments/comment', comment: comment %>
      <% end %>
      <%= link_to 'Write Comment', new_message_comment_path(message) %>
    </div>
    <div id="control">
      <% if current_user.admin? || current_user.id == message.user_id %>
        <%= link_to 'Edit', edit_message_path(message) %>
        <%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete %>
      <% end %>
    </div>
    <br />
  </div>
<% end %>

<%= link_to 'New Message', new_message_path %>
