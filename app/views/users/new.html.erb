<h2> Sign up </h2>

  <div class="fluid-row">
  <div class="span7">
<div class="form-horizontal">
<%= form_for(@user, :class => "form-horizontal" ) do |f| %>


  <fieldset>
    <!-- USERNAME -->
    <div class="control-group">
      <%= f.label :name, :class => "control-label", :for => "prependedInput" %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-user"></i></span>
          <%= f.text_field :name, :class => "input-xlarge", :id => "prependedInput", :size => "6" %>
        </div>
      </div>
    </div>

    <!-- EMAIL -->
    <div class="control-group">
      <%= f.label :email, :class => "control-label", :for => "prependedInput" %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on" >@</span>
          <%= f.text_field :email, :class => "input-xlarge", :id => "prependedInput", :size => "6"  %>
        </div>
      </div>
    </div>

    <!-- PASSWORD -->
    <div class="control-group">
      <%= f.label :password, :class => "control-label", :for => "prependedInput" %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-log"></i></span>
          <%= f.password_field :password, :class => "input-xlarge", :id => "prependedInput", :size => "6" %>
        </div>
      </div>
    </div>

    <!-- REPEAT PASSWORD -->
    <div class="control-group">
      <%= f.label :password_confirmation, "Passwort wiederholen", :class => "control-label", :for => "prependedInput" %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-log"></i></span>
          <%= f.password_field :password_confirmation, :class => "input-xlarge", :id => "prependedInput", :size => "6" %>
        </div>
      </div>
    </div>

    <!-- SUBMIT -->
    <%= f.submit "Anmeldung", :class => "btn btn-primary" %>
  </fieldset>
<% end %>
</div>
</div><!-- END SPAN6 -->
<div class="span5">
    <%= render 'shared/error_messages' %>
</div>
</div>
